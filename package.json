{
  "name": "@divotion/ice",
  "description": "Track changes in JavaScript. Compatible with TinyMCE up to version 8. Forked from NYTimes/ice.",
  "version": "1.3.2",
  "type": "module",
  "author": "Dennis de Vries <dennis.de.vries@divotion.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ddevries-divotion/ice.git"
  },
  "main": "dist/ice.min.js",
  "files": [
    "dist/",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "NODE_ENV=production rollup -c",
    "build:dev": "NODE_ENV=development rollup -c",
    "prepare": "npm run build",
    "clean": "rm -rf dist demo/dist",
    "demo:prepare": "npm run build && npm run demo:copy",
    "demo:copy": "mkdir -p demo/dist && cp -r dist/* demo/dist/",
    "test": "playwright test --reporter=line",
    "test:headed": "playwright test --headed",
    "lint": "eslint ./src/ --fix",
    "lint:check": "eslint ./src/",
    "format": "prettier --write ./src/**/*.js",
    "format:check": "prettier --check ./src/**/*.js",
    "ci": "npm run lint && npm run format && npm run build && npm test"
  },
  "keywords": [
    "editor",
    "tinymce",
    "contenteditable",
    "ice",
    "tinymce plugin",
    "track changes"
  ],
  "dependencies": {
    "rangy": "^1.3.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@playwright/test": "^1.53.2",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/node": "^24.0.10",
    "archiver": "^7.0.1",
    "eslint": "^9.30.1",
    "globals": "^16.3.0",
    "prettier": "3.6.2",
    "rollup": "^4.46.2",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-delete": "^3.0.1"
  },
  "bugs": {
    "url": "https://github.com/ddevries-divotion/ice/issues"
  },
  "license": "GPL-2.0-or-later"
}
